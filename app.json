{
  "expo": {
    "name": "AssessmentBookScanner",
    "slug": "AssessmentBookScanner",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.assessment.bookscanner",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["CAMERA"]
    },
    "scheme": "assessmentbookscanner",
    "plugins": [
      [
        "expo-image-picker",
        {
          "cameraPermission": "Allow Assessment Book Scanner to access your camera."
        }
      ]
    ]
  }
}
